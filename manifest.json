{
  "manifest_version": 2,
  "name": "C3-Assistant",
  "version": "1.1",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "options_ui": {
    "page": "/Options/options.html"
  },

  "browser_action": {
    "default_icon": "Icon.png",
    "default_title": "C3-Assistant",
    "default_popup": "view.html"
  },

  "permissions": ["activeTab", "storage", "https://www.googleapis.com/"],

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }

  
}


